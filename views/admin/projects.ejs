<%- include('partials/admin-header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Projects Management</h1>
    <a href="/admin/projects/new" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add Project
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Images</th>
                <th>Featured</th>
                <th>Order</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (projects && projects.length > 0) { %>
                <% projects.forEach(project => { %>
                    <tr>
                        <td><%= project.title %></td>
                        <td>
                            <% if (project.images && project.images.length > 0) { %>
                                <span class="badge bg-info"><%= project.images.length %> image(s)</span>
                            <% } else { %>
                                <span class="text-muted">No images</span>
                            <% } %>
                        </td>
                        <td>
                            <% if (project.featured) { %>
                                <span class="badge bg-success">Yes</span>
                            <% } else { %>
                                <span class="badge bg-secondary">No</span>
                            <% } %>
                        </td>
                        <td><%= project.order %></td>
                        <td>
                            <% if (project.active) { %>
                                <span class="badge bg-success">Active</span>
                            <% } else { %>
                                <span class="badge bg-secondary">Inactive</span>
                            <% } %>
                        </td>
                        <td>
                            <a href="/admin/projects/<%= project._id %>/edit" class="btn btn-sm btn-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <button class="btn btn-sm btn-danger" onclick="deleteProject('<%= project._id %>', '<%= project.title %>')">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="6" class="text-center text-muted">No projects found. <a href="/admin/projects/new">Add one</a></td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<script>
async function deleteProject(id, name) {
    if (!confirmDelete(name)) return;
    
    try {
        const response = await fetch(`/admin/projects/${id}`, {
            method: 'DELETE',
        });
        
        const result = await response.json();
        
        if (result.success) {
            location.reload();
        } else {
            alert('Error deleting project');
        }
    } catch (error) {
        alert('Error deleting project');
    }
}
</script>

<%- include('partials/admin-footer') %>

