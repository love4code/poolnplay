<%- include('partials/admin-header') %>

<h1 class="mb-4">Dashboard</h1>

<div class="row g-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-envelope"></i> Total Inquiries</h5>
                <h2 class="mb-0"><%= stats.inquiries %></h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-envelope-exclamation"></i> Unread</h5>
                <h2 class="mb-0"><%= stats.unreadInquiries %></h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-box-seam"></i> Products</h5>
                <h2 class="mb-0"><%= stats.products %></h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-folder"></i> Projects</h5>
                <h2 class="mb-0"><%= stats.projects %></h2>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mt-2">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-tools"></i> Services</h5>
                <h2 class="mb-0"><%= stats.services %></h2>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-images"></i> Media Files</h5>
                <h2 class="mb-0"><%= stats.media %></h2>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <h3>Quick Actions</h3>
    <div class="d-flex gap-2 flex-wrap">
        <a href="/admin/services/new" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Service
        </a>
        <a href="/admin/projects/new" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Project
        </a>
        <a href="/admin/products/new" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Product
        </a>
        <a href="/admin/media" class="btn btn-primary">
            <i class="bi bi-upload"></i> Upload Media
        </a>
    </div>
</div>

<%- include('partials/admin-footer') %>

