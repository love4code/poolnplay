<%- include('partials/admin-header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Products Management</h1>
    <a href="/admin/products/new" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add Product
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Sizes</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (products && products.length > 0) { %>
                <% products.forEach(product => { %>
                    <tr>
                        <td><%= product.name %></td>
                        <td><%= product.price ? '$' + product.price.toFixed(2) : 'N/A' %></td>
                        <td>
                            <% if (product.sizes && product.sizes.length > 0) { %>
                                <span class="badge bg-info"><%= product.sizes.length %> size(s)</span>
                            <% } else { %>
                                <span class="text-muted">No sizes</span>
                            <% } %>
                        </td>
                        <td>
                            <% if (product.active) { %>
                                <span class="badge bg-success">Active</span>
                            <% } else { %>
                                <span class="badge bg-secondary">Inactive</span>
                            <% } %>
                        </td>
                        <td>
                            <a href="/admin/products/<%= product._id %>/edit" class="btn btn-sm btn-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <button class="btn btn-sm btn-danger" onclick="deleteProduct('<%= product._id %>', '<%= product.name %>')">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="5" class="text-center text-muted">No products found. <a href="/admin/products/new">Add one</a></td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<script>
async function deleteProduct(id, name) {
    if (!confirmDelete(name)) return;
    
    try {
        const response = await fetch(`/admin/products/${id}`, {
            method: 'DELETE',
        });
        
        const result = await response.json();
        
        if (result.success) {
            location.reload();
        } else {
            alert('Error deleting product');
        }
    } catch (error) {
        alert('Error deleting product');
    }
}
</script>

