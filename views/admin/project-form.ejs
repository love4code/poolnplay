<%- include('partials/admin-header') %>

<h1 class="mb-4"><%= typeof project !== 'undefined' && project ? 'Edit Project' : 'Add Project' %></h1>

<form method="POST" action="<%= typeof project !== 'undefined' && project ? `/admin/projects/${project._id}?_method=PUT` : '/admin/projects' %>">
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Project Title *</label>
                        <input type="text" name="title" class="form-control" value="<%= typeof project !== 'undefined' && project ? project.title : '' %>" required>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Description *</label>
                        <textarea name="description" class="form-control" rows="5" required><%= typeof project !== 'undefined' && project ? project.description : '' %></textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Project Images</label>
                        <div class="project-images-container">
                            <!-- Hidden inputs to store selected image IDs -->
                            <div id="selectedImagesInputs"></div>
                            
                            <!-- Selected Images Preview -->
                            <div id="selectedImagesPreview" class="d-flex flex-wrap gap-2 mb-3">
                                <% if (typeof project !== 'undefined' && project && project.images && project.images.length > 0) { %>
                                    <% project.images.forEach(img => { %>
                                        <div class="selected-image-item position-relative" data-image-id="<%= img._id %>">
                                            <img src="<%= img.thumbnailDataUrl %>" 
                                                 alt="<%= img.originalName %>" 
                                                 style="width: 100px; height: 100px; object-fit: cover; border-radius: 4px; border: 2px solid #0d6efd;">
                                            <button type="button" class="btn btn-sm btn-danger position-absolute top-0 end-0 m-1 remove-image-btn" 
                                                    style="width: 24px; height: 24px; padding: 0; line-height: 1; border-radius: 50%;">
                                                <i class="bi bi-x" style="font-size: 12px;"></i>
                                            </button>
                                        </div>
                                    <% }); %>
                                <% } else { %>
                                    <div class="text-muted small">No images selected</div>
                                <% } %>
                            </div>
                            
                            <!-- Select Images Button -->
                            <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#projectImagesModal">
                                <i class="bi bi-images"></i> Select Images
                            </button>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Display Order</label>
                                <input type="number" name="order" class="form-control" value="<%= typeof project !== 'undefined' && project ? project.order : 0 %>">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="form-check mt-4">
                                    <input type="checkbox" name="featured" class="form-check-input" id="featured" <%= typeof project !== 'undefined' && project && project.featured ? 'checked' : '' %>>
                                    <label class="form-check-label" for="featured">Featured (Show on Home Page)</label>
                                </div>
                                <div class="form-check">
                                    <input type="checkbox" name="active" class="form-check-input" id="active" <%= typeof project !== 'undefined' && project && project.active !== false ? 'checked' : '' %>>
                                    <label class="form-check-label" for="active">Active</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header">SEO Settings</div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">SEO Title</label>
                        <input type="text" name="seoTitle" class="form-control" value="<%= typeof project !== 'undefined' && project ? project.seoTitle || '' : '' %>">
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">SEO Description</label>
                        <textarea name="seoDescription" class="form-control" rows="2"><%= typeof project !== 'undefined' && project ? project.seoDescription || '' : '' %></textarea>
                    </div>
                </div>
            </div>
            
            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Save Project
                </button>
                <a href="/admin/projects" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </div>
</form>

<!-- Project Images Picker Modal -->
<div class="modal fade" id="projectImagesModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Select Project Images</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <!-- Search Bar -->
                <div class="mb-3">
                    <input type="text" 
                           class="form-control" 
                           id="projectImagesSearchInput" 
                           placeholder="Search images by name...">
                </div>
                
                <!-- Media Grid -->
                <div class="media-library-grid" style="max-height: 500px; overflow-y: auto;">
                    <div class="row g-2" id="projectImagesGridContainer">
                        <!-- Media items -->
                        <% if (media && media.length > 0) { %>
                            <% media.forEach(item => { %>
                                <div class="col-md-3 col-sm-4 col-6 project-image-item-wrapper">
                                    <div class="project-image-item card h-100 <%= typeof project !== 'undefined' && project && project.images && project.images.some(img => img._id.toString() === item._id.toString()) ? 'border-primary border-2' : '' %>" 
                                         data-image-id="<%= item._id %>" 
                                         data-image-name="<%= item.originalName.toLowerCase() %>"
                                         style="cursor: pointer; transition: all 0.2s; position: relative;">
                                        <div class="position-absolute top-0 end-0 m-2" style="display: none;">
                                            <i class="bi bi-check-circle-fill text-primary" style="font-size: 1.5rem;"></i>
                                        </div>
                                        <img src="<%= item.thumbnailDataUrl %>" 
                                             class="card-img-top" 
                                             alt="<%= item.originalName %>" 
                                             style="height: 120px; object-fit: cover;">
                                        <div class="card-body p-2">
                                            <p class="card-text small text-truncate mb-0" title="<%= item.originalName %>">
                                                <%= item.originalName %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="col-12">
                                <p class="text-muted text-center">No media available. Upload images in the Media Library first.</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmProjectImagesSelection">Select Images</button>
            </div>
        </div>
    </div>
</div>

<script>
// ========== PROJECT IMAGES MULTI-SELECT ==========
let selectedProjectImageIds = new Set();
<% if (typeof project !== 'undefined' && project && project.images && project.images.length > 0) { %>
    <% project.images.forEach(img => { %>
        selectedProjectImageIds.add('<%= img._id %>');
    <% }); %>
<% } %>

// Store all media data for project images
const projectImagesData = {};
<% if (media && media.length > 0) { %>
    <% media.forEach(item => { %>
projectImagesData['<%= item._id %>'] = {
    id: '<%= item._id %>',
    name: '<%= item.originalName.replace(/'/g, "\\'") %>',
    thumbnail: '<%= item.thumbnailDataUrl %>'
};
    <% }); %>
<% } %>

// Project images selection handler
document.addEventListener('DOMContentLoaded', function() {
    const projectImageItems = document.querySelectorAll('.project-image-item');
    const confirmProjectImagesBtn = document.getElementById('confirmProjectImagesSelection');
    const projectImagesSearchInput = document.getElementById('projectImagesSearchInput');
    const selectedImagesPreview = document.getElementById('selectedImagesPreview');
    const selectedImagesInputs = document.getElementById('selectedImagesInputs');
    
    // Update preview based on selected IDs
    function updateProjectImagesPreview() {
        selectedImagesInputs.innerHTML = '';
        selectedImagesPreview.innerHTML = '';
        
        if (selectedProjectImageIds.size === 0) {
            selectedImagesPreview.innerHTML = '<div class="text-muted small">No images selected</div>';
        } else {
            selectedProjectImageIds.forEach(imageId => {
                if (projectImagesData[imageId]) {
                    // Add hidden input
                    const hiddenInput = document.createElement('input');
                    hiddenInput.type = 'hidden';
                    hiddenInput.name = 'images';
                    hiddenInput.value = imageId;
                    selectedImagesInputs.appendChild(hiddenInput);
                    
                    // Add preview
                    const previewItem = document.createElement('div');
                    previewItem.className = 'selected-image-item position-relative';
                    previewItem.setAttribute('data-image-id', imageId);
                    previewItem.innerHTML = `
                        <img src="${projectImagesData[imageId].thumbnail}" 
                             alt="${projectImagesData[imageId].name}" 
                             style="width: 100px; height: 100px; object-fit: cover; border-radius: 4px; border: 2px solid #0d6efd;">
                        <button type="button" class="btn btn-sm btn-danger position-absolute top-0 end-0 m-1 remove-image-btn" 
                                style="width: 24px; height: 24px; padding: 0; line-height: 1; border-radius: 50%;">
                            <i class="bi bi-x" style="font-size: 12px;"></i>
                        </button>
                    `;
                    selectedImagesPreview.appendChild(previewItem);
                    
                    // Add remove button handler
                    previewItem.querySelector('.remove-image-btn').addEventListener('click', function() {
                        selectedProjectImageIds.delete(imageId);
                        updateProjectImagesPreview();
                        updateProjectImagesSelection();
                    });
                }
            });
        }
    }
    
    // Update visual selection in modal
    function updateProjectImagesSelection() {
        projectImageItems.forEach(item => {
            const imageId = item.getAttribute('data-image-id');
            const checkIcon = item.querySelector('.bi-check-circle-fill');
            
            if (selectedProjectImageIds.has(imageId)) {
                item.classList.add('border-primary', 'border-2');
                if (checkIcon) checkIcon.parentElement.style.display = 'block';
            } else {
                item.classList.remove('border-primary', 'border-2');
                if (checkIcon) checkIcon.parentElement.style.display = 'none';
            }
        });
    }
    
    // Click handler for project image items
    projectImageItems.forEach(item => {
        item.addEventListener('click', function() {
            const imageId = this.getAttribute('data-image-id');
            
            if (selectedProjectImageIds.has(imageId)) {
                selectedProjectImageIds.delete(imageId);
            } else {
                selectedProjectImageIds.add(imageId);
            }
            
            updateProjectImagesSelection();
        });
    });
    
    // Confirm selection
    confirmProjectImagesBtn.addEventListener('click', function() {
        updateProjectImagesPreview();
        
        // Close modal
        const modal = bootstrap.Modal.getInstance(document.getElementById('projectImagesModal'));
        if (modal) {
            modal.hide();
        }
    });
    
    // Search functionality
    projectImagesSearchInput.addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const imageWrappers = document.querySelectorAll('.project-image-item-wrapper');
        
        imageWrappers.forEach(wrapper => {
            const imageItem = wrapper.querySelector('.project-image-item');
            const imageName = imageItem.getAttribute('data-image-name') || '';
            
            if (imageName.includes(searchTerm)) {
                wrapper.style.display = '';
            } else {
                wrapper.style.display = 'none';
            }
        });
    });
    
    // Reset selection when modal is opened
    document.getElementById('projectImagesModal').addEventListener('show.bs.modal', function() {
        updateProjectImagesSelection();
        projectImagesSearchInput.value = '';
        // Show all items
        document.querySelectorAll('.project-image-item-wrapper').forEach(w => w.style.display = '');
    });
    
    // Initialize preview on page load
    updateProjectImagesPreview();
});
</script>

<style>
.project-image-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

.project-image-item.border-primary {
    border-width: 2px !important;
}

.selected-image-item {
    transition: transform 0.2s;
}

.selected-image-item:hover {
    transform: scale(1.05);
}

.remove-image-btn {
    opacity: 0.8;
}

.remove-image-btn:hover {
    opacity: 1;
}

.media-library-grid::-webkit-scrollbar {
    width: 8px;
}

.media-library-grid::-webkit-scrollbar-track {
    background: #f1f1f1;
}

.media-library-grid::-webkit-scrollbar-thumb {
    background: #888;
    border-radius: 4px;
}

.media-library-grid::-webkit-scrollbar-thumb:hover {
    background: #555;
}
</style>

<%- include('partials/admin-footer') %>

